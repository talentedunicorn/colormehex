  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.11.0",
    "@vite-pwa/assets-generator": "^0.2.2",
    "@vitejs/plugin-vue": "^5.0.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.1.0",
    "husky": "^8.0.1",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "vite": "^5.0.11",
